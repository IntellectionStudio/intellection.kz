{
  "name": "intellection",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://intellection.netlify.com",
  "repository": "IntellectionStudio/intellection.kz",
  "license": "GPL-3.0",
  "scripts": {
    "lint:js": "eslint --fix .",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "typecheck": "flow check .",
    "pretest": "npm run lint",
    "test": "npm-run-all --parallel typecheck lint",
    "commitmsg": "validate-commit-msg",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "start": "phenomic start",
    "build": "phenomic build"
  },
  "phenomic": {
    "CNAME": false,
    "devPort": 3000
  },
  "config": {
    "validate-commit-msg": {
      "maxSubjectLength": 72,
      "types": "conventional-commit-types"
    }
  },
  "lint-staged": {
    "{src,scripts}/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "./node_modules/phenomic/lib/stylelint-config-recommended/index.js"
  },
  "#babel": "webpack-(development|production) are useful for webpack 2, otherwise use development|production",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "babel-preset-env",
          "babel-preset-es2015",
          "babel-preset-stage-0",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel",
          "babel-plugin-syntax-flow",
          "babel-plugin-transform-flow-strip-types",
          "babel-plugin-transform-runtime",
          [
            "babel-plugin-module-resolver",
            {
              "root": [
                "./src"
              ]
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "babel-preset-react-optimize",
          "babel-preset-env",
          "babel-preset-es2015",
          "babel-preset-stage-0",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-syntax-flow",
          "babel-plugin-transform-flow-strip-types",
          [
            "babel-plugin-module-resolver",
            {
              "root": [
                "./src"
              ]
            }
          ]
        ]
      },
      "webpack-development": {
        "presets": [
          [
            "babel-preset-env",
            {
              "modules": false
            }
          ],
          "babel-preset-es2015",
          "babel-preset-stage-0",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel",
          "babel-plugin-syntax-flow",
          "babel-plugin-transform-flow-strip-types",
          "babel-plugin-transform-runtime",
          [
            "babel-plugin-module-resolver",
            {
              "root": [
                "./src"
              ]
            }
          ]
        ]
      },
      "webpack-production": {
        "presets": [
          "babel-preset-react-optimize",
          [
            "babel-preset-env",
            {
              "modules": false
            }
          ],
          "babel-preset-stage-0",
          "babel-preset-es2015",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-syntax-flow",
          "babel-plugin-transform-flow-strip-types",
          [
            "babel-plugin-module-resolver",
            {
              "root": [
                "./src"
              ]
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "phenomic": "^0.21.0",
    "ramda": "^0.23.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "react-helmet": "^5.0.2",
    "react-intl": "^2.2.3",
    "react-router": "^2.3.0",
    "react-svg-inline": "^1.2.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.6.0",
    "tachyons": "^4.7.1",
    "warning": "^3.0.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.0.0-beta.1",
    "babel-plugin-inline-import": "^2.0.4",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-anvilabs": "^8.0.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.43.1",
    "history": "^2.0.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "npm-run-all": "^4.0.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "prettier": "^0.22.0",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^3.0.0-beta",
    "react-redux": "^5.0.4",
    "style-loader": "^0.16.1",
    "stylelint": "^7.2.0",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^2.3.0"
  }
}
